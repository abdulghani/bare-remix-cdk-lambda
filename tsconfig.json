{
  "compilerOptions": {
    "types": ["vite/client"],
    "lib": ["es2020", "dom"],
    "outDir": "./dist",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./@/*"],
      "app/*": ["./app/*"],
      "public/*": ["./public/*"]
    }
  },
  "include": ["app/**/*", "@/**/*", "cdk/**/*", "public/**/*"],
  "exclude": ["node_modules", "cdk.out", "build", ".cache", "public/build"]
}
